{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": false,
    "inlineSources": true,
    "inlineSourceMap": true,
    "sourceRoot": "/",
    "target": "ES2018",
    "outDir": ".build",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ES2018"],
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "resolveJsonModule": true
  }
}
